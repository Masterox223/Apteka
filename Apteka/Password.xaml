<Window x:Class="Apteka.Password"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Apteka"
        mc:Ignorable="d"
        Title="Введите пароль" Height="200" Width="300" ResizeMode="NoResize" Background="#F0F0F0">
    <Grid Margin="0">
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Image/5.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch">

            <TextBox x:Name="text" Text="" Width="Auto" Height="30" Margin="15" />
            <Button Click="Button_Click" Content="Подтвердить" Width="100" Height="34" Background="#4CAF50" Foreground="White" 
                    FontSize="14" BorderBrush="Transparent" />
        </StackPanel>
    </Grid>
</Window>
